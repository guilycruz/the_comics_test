<!DOCTYPE html>
<html>
    <head>
        <title>The Comics Test</title>
    </head>
    <body>
        <% @characters.each do |character| %>
          <h1> <%= character.name %></h1>
          <p>Description: <%= character.description %> </p>
          <p><img src=<%= character.thumbnail %> alt=<%= character.name %> height="150" width="100"></p>
          <% if character.stories.any? %>
            <h3>Story</h3>
            <% random_story = character.stories.sample.get_details %>
            <p><b><%= random_story.name %></b></p>
            <p>Id: <%= random_story.id %></p>
            <p>Description: <%= random_story.description %></p>
            <!-- <p><img src=<%= random_story.thumbnail %> alt=<%= random_story.name %> height="150" width="100"></p>   -->
          <% end %>
        <% end %>
    </body>
</html>
